pipeline {
    agent any

    environment {
    IMAGE_NAME = "vedantatugade/java-project"
    CONTAINER_NAME = "java-container"
    PORT_MAPPING = "8081:7000"
    MINIKUBE_IP = "3.238.199.0"   
}


    stages {

        stage("Checkout") {
            steps {
                checkout scm
                sh '''
                    echo "âœ… Checkout completed in: $PWD"
                    ls -l
                '''
            }
        }

        stage("Build Application") {
            steps {
                sh '''
                    echo "ðŸš€ Building Java Application..."
                    mvn clean package
                    echo "âœ… Build completed successfully!"
                '''
            }
        }

        stage("Test Application") {
            steps {
                sh '''
                    echo "ðŸ§ª Running unit tests..."
                    mvn test
                    echo "âœ… Tests completed successfully!"
                '''
            }
        }

        stage("Build Docker Image") {
            steps {
                sh """
                    echo "======== Building Docker Image ============"
                    docker build -t ${IMAGE_NAME} .
                    echo "======== Docker Image Built Successfully ========"
                """
            }
        }

        stage('Deploying on EC2 Minikube Cluster') {
            steps {
                    sh 'scp deployment.yaml ubuntu@$MINIKUBE_IP:/home/ubuntu/'
                    sh 'ssh ubuntu@$MINIKUBE_IP "kubectl delete -f /home/ubuntu/deployment.yaml --ignore-not-found=true"'
                    sh 'ssh ubuntu@$MINIKUBE_IP "kubectl apply -f /home/ubuntu/deployment.yaml"'
                }
            }
    }
}
