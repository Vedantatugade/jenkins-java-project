pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "vedantatugade/java-project"
        DOCKER_TAG = "latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Vedantatugade/jenkins-java-project.git', branch: 'master'
            }
        }

        stage('Build Application') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test Application') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-creds',
                    usernameVariable: 'DOCKER_USERNAME',
                    passwordVariable: 'DOCKER_PASSWORD'
                )]) {
                    sh """
                        echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    """
                }
            }
        }

        // <--- Replace the previous Deploy stage with this
        stage('Deploy to EC2 Minikube') {
            steps {
                sh """
                ssh -i /path/to/private-key -o StrictHostKeyChecking=no ubuntu@3.238.199.0 '
                    minikube delete --force || true
                    minikube start --force
                    kubectl delete deployment java-app || true
                    kubectl delete service java-service || true
                    kubectl create deployment java-app --image=${DOCKER_IMAGE}:${DOCKER_TAG}
                    kubectl expose deployment java-app --type=NodePort --port=7000
                '
                """
            }
        }
    }

    post {
        success {
            echo "ðŸŽ‰ CI/CD Pipeline Completed Successfully!"
        }
        failure {
            echo "âŒ Pipeline Failed â€” Check Logs!"
        }
    }
}
