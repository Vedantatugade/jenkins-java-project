pipeline {
    agent any

    stages {
        stage("Checkout") {
            steps {
                // Automatically checkout source code from Git
                checkout scm
                sh '''
                    echo "âœ… Checkout completed in: $PWD"
                    ls -l
                '''
            }
        }

        stage("Build Application") {
            steps {
                sh '''
                    echo "ðŸš€ Building Java Application..."
                    mvn clean package
                    echo "âœ… Build completed successfully!"
                '''
            }
        }

        stage("Test Application") {
            steps {
                sh '''
                    echo "ðŸ§ª Running Unit Tests..."
                    mvn test
                    echo "âœ… Tests completed successfully!"
                '''
            }
        }

        stage("Building the Docker Image"){
     steps {
         sh """
           echo "========Building the Docker Image ============"
           
           echo "====== Building Image Completed ====="
         """      
      }
   }

} // end of stages

} // end of pipeline
