pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "vedantatugade/java-project"
        DOCKER_TAG = "latest"
        MINIKUBE_IP = "3.239.96.84"   // Your EC2 public IP
    }

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/Vedantatugade/jenkins-java-project.git', branch: 'master'
            }
        }

        stage('Build Application') {
            steps {
                sh "mvn clean package"
            }
        }

        stage('Test Application') {
            steps {
                sh "mvn test"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-creds',
                    usernameVariable: 'DOCKER_USERNAME',
                    passwordVariable: 'DOCKER_PASSWORD'
                )]) {
                    sh """
                        echo "${DOCKER_PASSWORD}" | docker login -u "${DOCKER_USERNAME}" --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    """
                }
            }
        }

       stage('Deploy on Minikube in EC2') {
    withCredentials([sshUserPrivateKey(credentialsId: 'ec2key', keyFileVariable: 'SSH_KEY')]) {

        sh """
        ssh -i ${SSH_KEY} -o StrictHostKeyChecking=no ubuntu@${EC2_IP} 'echo Connected to EC2'
        """

        sh """
        scp -i ${SSH_KEY} -o StrictHostKeyChecking=no \
            ${WORKSPACE}/deployment.yaml \
            ubuntu@${EC2_IP}:/home/ubuntu/
        """

        sh """
        ssh -i ${SSH_KEY} -o StrictHostKeyChecking=no ubuntu@${EC2_IP} '
            kubectl apply -f /home/ubuntu/deployment.yaml
        '
        """
    }
}

        }
    }
}
